<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= Agency.human_attribute_name(:relation) %></th>
      <th><%= Profile.human_attribute_name(:real_name) %></th>
      <th><%= Profile.human_attribute_name(:nick_name) %></th>
      <th><%= Profile.human_attribute_name(:birthday_type) %></th>
      <th><%= Profile.human_attribute_name(:birthday) %></th>
      <th><%= Profile.human_attribute_name(:gender) %></th>
      <th><%= Profile.human_attribute_name(:note) %></th>
      <th>
        <%= link_to new_my_tutelage_path, remote: true, class: 'ui mini teal button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @tutelages.each do |tutelage| %>
    <tr>
      <td><%= tutelage.relation_i18n %></td>
      <td>
        <%= image_tag tutelage.pupil.avatar.variant(resize_to_limit: [30, 30]), class: 'ui avatar image' if tutelage.pupil.avatar.present? %>
        <%= tutelage.pupil.real_name %>
      </td>
      <td><%= tutelage.pupil.nick_name %></td>
      <td><%= tutelage.pupil.birthday_type %></td>
      <td><%= tutelage.pupil.birthday %></td>
      <td><%= tutelage.pupil.gender %></td>
      <td><%= tutelage.pupil.note %></td>
      <td class="ui labels">
        <%= link_to my_tutelage_path(tutelage), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_my_tutelage_path(tutelage), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to my_tutelage_path(tutelage), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
