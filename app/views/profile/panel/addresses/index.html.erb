
<table class="ui table">
  <thead>
    <tr>
      <th>Kind</th>
      <th>联系人</th>
      <th>联系方式</th>
      <th></th>
      <th colspan="3">
        <%= link_to 'New Address', new_admin_address_path(user_id: params[:user_id]), class: 'ui mini button' %>
      </th>
    </tr>
  </thead>

  <tbody>
  <% @addresses.each do |address| %>
    <tr id="address_<%= address.id %>">
      <td><%= address.kind_i18n %></td>
      <td><%= address.contact_person %></td>
      <td><%= address.tel %></td>
      <td>
        <%= address.area.nation %>
        <%= address.area.province %>
        <%= address.area.city %>
      </td>
      <td><%= address.address %></td>
      <td><%= link_to 'Show', address_path(address) %></td>
      <td><%= link_to 'Edit', edit_admin_address_path(address), remote: true %></td>
      <td><%= link_to 'Destroy', admin_address_path(address), remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

