      <th>联系人</th>
      <th>联系方式</th>
      <th></th>
      <th colspan="3">
      </th>
    </tr>
  </thead>

  <tbody>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.contact %></td>
      <td><%= address.tel %></td>
