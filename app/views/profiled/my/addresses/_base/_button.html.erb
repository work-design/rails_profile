<% if request.variant.any?(:wechat) %>
  <div
    class="weui-cell weui-cell_access weui-cell_link"
    data-controller="wechat"
    data-wechat-address-value="/pages/profiled/my/addresses/index?url=<%= url_for(action: 'program', only_path: false, **Rails.application.routes.default_url_options) %>"
    data-wechat-url-value="<%= url_for(action: 'fork', only_path: false) %>"
    data-action="click->wechat#openAddress">
    <div class="weui-cell__bd"><%= t('.new') %></div>
    <span class="weui-cell__ft"></span>
  </div>
<% else %>
  <%= link_to({ action: 'new' }, state: 'enter', class: 'weui-cell weui-cell_access weui-cell_link') do %>
    <div class="weui-cell__bd"><%= t('.new') %></div>
    <span class="weui-cell__ft"></span>
  <% end %>
<% end %>
