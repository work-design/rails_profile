<tr>
  <td><%= address.kind_i18n %></td>
  <td><%= address.contact_person %></td>
  <td><%= address.tel %></td>
  <td>
    <%= address.area.nation %>
    <%= address.area.province %>
    <%= address.area.city %>
  </td>
  <td><%= address.address %></td>
