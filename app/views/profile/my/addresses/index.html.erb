<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>联系人</th>
      <th>联系方式</th>
      <th></th>
      <th colspan="3">
        <%= link_to new_my_address_path, remote: true, class: 'ui mini button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.contact %></td>
      <td><%= address.tel %></td>
      <td>
        <%= address.area.nation %>
        <%= address.area.province %>
        <%= address.area.city %>
      </td>
      <td><%= address.address %></td>
      <td><%= link_to 'Show', address_path(address) %></td>
      <td><%= link_to 'Edit', edit_my_address_path(address), remote: true %></td>
      <td><%= link_to 'Destroy', my_address_path(address), method: :delete, data: { confirm: t('.confirm') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
