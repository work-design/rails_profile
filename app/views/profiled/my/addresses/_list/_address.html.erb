<label class="weui-cell weui-cell_active weui-check__label" for="cart_address_id_<%= model.id %>">
  <span class="weui-cell__bd is-flex is-flex-direction-column">
    <span>
      <span><%= model.contact %></span>
      <span><%= model.tel %></span>
    </span>
    <span class="is-size-7">
      <span><%= model.area.full_name %></span>
      <span><%= model.detail %></span>
    </span>
  </span>
  <span class="weui-cell__ft" data-controller="input">
    <span class="has-text-grey"></span>
    <%= form_with theme: nil, url: { action: 'update' }, method: :patch do |f| %>
      <%= f.radio_button :address_id, model.id, checked: model.id == current_cart.address_id, class: 'weui-check', data: { action: 'input#form' } %>
      <span class="weui-icon-checked">选为默认</span>
    <% end %>
  </span>
</label>
