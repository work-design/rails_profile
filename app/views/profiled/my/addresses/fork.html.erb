<%= content_for(:wechat_js) do %>
  <%= wechat_config_js debug: false, apis: ['openAddress'] -%>
<% end %>

<%= form_with theme: 'weui', model: @address, url: { action: 'wechat' }, data: { controller: 'wechat_address' } do |f| %>
  <%= f.text_field :contact %>
  <%= f.text_field :tel %>
  <%= f.text_area :detail %>
  <%= f.text_field :post_code %>
  <%= hidden_field_tag :return_to, params[:return_to] %>
  <%= hidden_field_tag :province_name %>
  <%= hidden_field_tag :city_name %>
  <%= hidden_field_tag :country_name %>
  <%= f.submit %>
<% end %>
