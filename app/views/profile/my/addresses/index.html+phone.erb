<%= content_for(:wechat_js) do %>
  <%= wechat_config_js debug: false, apis: ['openAddress'] -%>
  <meta name="turbolinks-visit-control" content="reload">
<% end %>

<div class="weui-panel">
  <div class="weui-panel__hd"><%= t('.title') %></div>
  <div class="weui-panel__bd">
    <% @addresses.each do |address| %>
    <div class="weui-media-box weui-media-box_appmsg">
      <div class="weui-media-box__bd">
        <h6 class="weui-media-box__title">
          <%= link_to address.name, my_address_path(address) %>
        </h6>
        <div class="weui-media-box__desc"><%= address.area.full_name %><%= address.detail %></div>
      </div>
      <div class="weui-media-box__ft">
        <div class="weui-btn weui-btn_default">
          <%= link_to '删除', my_address_url(address.id), method: :delete, data: { confirm: t('.confirm') }, remote: true %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="weui-panel__ft">
    <%= link_to fork_my_addresses_path, remote: true, class: 'weui-cell weui-cell_access weui-cell_link' do %>
      <div class="weui-cell__bd"><%= t('.new') %></div>
      <span class="weui-cell__ft"></span>
    <% end %>
  </div>
</div>


