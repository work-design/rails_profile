<%= form_with model: [:admin, @profile] do |f| %>
  <%= render 'shared/error_messages', target: @profile %>
  <%= f.text_field :real_name %>
  <%= f.text_field :nick_name %>
  <%= f.file_field :avatar %>
  <%= f.select :gender, options_for_select(Profile.options_i18n(:gender), @profile.gender) %>
  <%= f.select :birthday_type, options_for_select(Profile.options_i18n(:birthday_type), @profile.birthday_type) %>
  <%= f.date_field :birthday %>
  <%= render partial: 'nodes/outer_select', locals: { f: f, outer: 'area' } %>
  <%= f.text_field :address %>
  <%= f.text_area :note %>
  <%= f.file_field :resume %>
  <%= f.submit %>
<% end %>
