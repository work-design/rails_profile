<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Area.human_attribute_name(:names) %></th>
      <th>
        <p><%= Area.human_attribute_name(:name) %></p>
        <p><%= Area.human_attribute_name(:parent) %></p>
      </th>
      <th><%= Area.human_attribute_name(:popular) %></th>
      <th><%= Area.human_attribute_name(:published) %></th>
      <th>
        <%= link_to new_panel_area_path, remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
  <% @areas.each do |area| %>
    <tr>
      <td><%= area.full_name %></td>
      <td>
        <p><%= area.name %></p>
        <p class="ui grey text"><%= area.parent&.name %></p>
      </td>
      <td>
        <div data-controller="input">
          <%= check_box_tag '[area]popular', nil, area.popular, data: { method: :patch, remote: true, url: panel_area_path(area), action: 'input#submit' }, id: nil, class: 'switch is-rounded' %>
          <label></label>
        </div>
      </td>
      <td>
        <div data-controller="input">
          <%= check_box_tag '[area]published', nil, area.published, data: { method: :patch, remote: true, url: panel_area_path(area), action: 'input#submit' }, id: nil, class: 'switch is-rounded' %>
          <label></label>
        </div>
      </td>
      <td>
        <%= link_to edit_panel_area_path(area), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to panel_area_path(area), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @areas %>

