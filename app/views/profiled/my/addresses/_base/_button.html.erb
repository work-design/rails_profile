<% if request.variant.include?(:mini_program) %>
  <div
    data-controller="mini-program"
    data-mini-program-direct-value="true"
    data-mini-program-url-value="/pages/addresses/index"
    data-mini-program-data-value="<%= { url: url_for(action: 'program', only_path: false, host: current_organ.host) }.to_json %>"
    class="weui-cell weui-cell_access weui-cell_link"
  >
    <div class="weui-cell__bd"><%= t('.new') %></div>
    <span class="weui-cell__ft"></span>
  </div>
<% elsif request.variant.include?(:wechat) %>
  <div
    data-controller="wechat"
    data-wechat-url-value="<%= url_for(action: 'fork', only_path: false) %>"
    data-action="click->wechat#openAddress"
    class="weui-cell weui-cell_access weui-cell_link"
  >
    <div class="weui-cell__bd"><%= t('.new') %></div>
    <span class="weui-cell__ft"></span>
  </div>
<% else %>
  <%= link_to({ action: 'new' }, state: 'enter', class: 'weui-cell weui-cell_access weui-cell_link') do %>
    <div class="weui-cell__bd"><%= t('.new') %></div>
    <span class="weui-cell__ft"></span>
  <% end %>
<% end %>
